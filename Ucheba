using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Добро пожаловать на Анкетирование! Пожалуйста, введи свои данные ниже, чтобы заполнить информацию в реестре:");

            Console.WriteLine("Напиши свое имя:");
            String firstName = Console.ReadLine();

            Console.WriteLine("Напиши свою фамилию:");
            String secondName = Console.ReadLine();

            Console.WriteLine("Напиши свой возраст:");
            String age = Console.ReadLine();

            Console.WriteLine("Напиши свой рост:");
            String height = Console.ReadLine();

            Console.WriteLine("Напиши свой вес:");
            String weight = Console.ReadLine();

            Console.Write("Твоя анкета готова! Вот твои данные: " + "Имя: " + firstName + " Фамилия: " + secondName + " Возраст: " + age + " Рост: " + height + " Вес: " + weight);
            Console.ReadLine();


        }
    }
}
